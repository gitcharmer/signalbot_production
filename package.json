{
  "name": "signalbot",
  "version": "1.0.0",
  "author": {
    "name": "signal",
    "email": "signal@163.com"
  },
  "main": "public/main.js",
  "homepage": "signalbot.bitoro.site",
  "private": true,
  "description": "Signal Bot",
  "scripts": {
    "build": "umi build",
    "deploy": "npm run build && npm run gh-pages",
    "gh-pages": "gh-pages -d dist",
    "start": "umi dev",
    "package:win": "yarn build && electron-builder --win",
    "package:linux": "yarn build && electron-builder --linux",
    "package:mac": "yarn build && electron-builder --mac",
    "package": "yarn build && electron-builder --publish always",
    "electron:build": "yarn build && cross-env NODE_ENV=production electron dist/main.js",
    "electron:dev": "concurrently \"cross-env BROWSER=none yarn start\" \"wait-on http://localhost:8000 && cross-env NODE_ENV=development electron public/main.js\""
  },
  "lint-staged": {
    "**/*.less": "stylelint --syntax less",
    "**/*.{js,jsx,ts,tsx}": "npm run lint-staged:js",
    "**/*.{js,jsx,tsx,ts,less,md,json}": [
      "prettier --write"
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 10"
  ],
  "dependencies": {
    "@ant-design/icons": "^4.5.0",
    "@ant-design/pro-descriptions": "^1.9.0",
    "@ant-design/pro-form": "^1.43.0",
    "@ant-design/pro-layout": "^6.26.0",
    "@ant-design/pro-table": "^2.56.0",
    "@luminati-io/socksv5": "0.0.7",
    "@sakeperp/artifact": "1.0.4",
    "@umijs/route-utils": "^2.0.3",
    "antd": "^4.17.4",
    "async-mutex": "0.2.6",
    "axios": "^0.21.1",
    "big.js": "5.2.2",
    "binance-api-client": "^2.10.2",
    "ccxt": "1.49.59",
    "classnames": "^2.2.6",
    "crypto-js": "^4.0.0",
    "ethers": "5.4.7",
    "form-data": "^4.0.0",
    "ftx-api-rest": "0.0.6",
    "https-proxy-agent": "^5.0.0",
    "i": "^0.3.6",
    "lodash": ">=4.17.19",
    "luxon": "1.23.0",
    "moment": "^2.25.3",
    "node-fetch": "2.6.1",
    "omit.js": "^2.0.2",
    "rc-menu": "^9.0.13",
    "rc-util": "^5.14.0",
    "react": "^17.0.0",
    "react-dev-inspector": "^1.1.1",
    "react-dom": "^17.0.0",
    "react-helmet-async": "^1.0.4",
    "reflect-metadata": "0.1.13",
    "source-map-support": "0.5.19",
    "typedi": "0.8.0",
    "umi": "^3.5.20",
    "umi-serve": "^1.9.10"
  },
  "devDependencies": {
    "@ant-design/pro-cli": "^2.0.2",
    "@testdeck/di-typedi": "0.0.10",
    "@typechain/ethers-v5": "3.0.0",
    "@types/big.js": "4.0.5",
    "@types/crypto-js": "^3.1.38",
    "@types/express": "^4.17.0",
    "@types/history": "^4.7.2",
    "@types/jest": "^26.0.0",
    "@types/lodash": "4.14.154",
    "@types/luxon": "1.22.0",
    "@types/node": "13.13.4",
    "@types/node-fetch": "2.5.7",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-helmet": "^6.1.0",
    "@types/requestretry": "^1.12.6",
    "@umijs/fabric": "^2.6.2",
    "@umijs/openapi": "^1.3.0",
    "@umijs/plugin-blocks": "^2.0.5",
    "@umijs/plugin-esbuild": "^1.0.1",
    "@umijs/plugin-openapi": "^1.2.0",
    "@umijs/preset-ant-design-pro": "^1.2.0",
    "@umijs/preset-dumi": "^1.1.7",
    "@umijs/preset-react": "^1.8.17",
    "@umijs/yorkie": "^2.0.3",
    "aws-sdk": "2.667.0",
    "carlo": "^0.9.46",
    "concurrently": "^6.4.0",
    "cross-env": "^7.0.0",
    "cross-port-killer": "^1.1.1",
    "detect-installer": "^1.0.1",
    "dotenv": "8.2.0",
    "electron": "^16.0.3",
    "electron-builder": "^22.14.5",
    "enzyme": "^3.11.0",
    "eslint": "^7.1.0",
    "express": "^4.17.1",
    "gh-pages": "^3.0.0",
    "jsdom-global": "^3.0.2",
    "lint-staged": "^10.0.0",
    "mockjs": "^1.0.1-beta3",
    "prettier": "^2.3.2",
    "puppeteer-core": "^8.0.0",
    "serverless": "1.69.0",
    "serverless-dotenv-plugin": "2.4.2",
    "serverless-offline": "6.1.4",
    "serverless-webpack": "5.3.2",
    "stylelint": "^13.0.0",
    "swagger-ui-react": "^3.52.3",
    "ts-node": "8.9.1",
    "tsconfig-paths": "3.9.0",
    "typechain": "4.0.0",
    "typedoc": "0.17.6",
    "typescript": "^4.2.2"
  },
  "build": {
    "appId": "org.qlcchain.signalbot",
    "buildVersion": "3.0.0",
    "productName": "signalbot",
    "asar": true,
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json",
      "public/main.js"
    ],
    "directories": {
      "output": "dist_electron"
    },
    "dmg": {
      "window": {
        "width": 540,
        "height": 380
      },
      "contents": [
        {
          "x": 410,
          "y": 230,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 230,
          "type": "file"
        }
      ]
    },
    "mac": {
      "icon": "dist/icons/icon-512x512.png",
      "target": [
        "dmg"
      ],
      "type": "distribution",
      "extraFiles":  {
        "from": "./LinuxInit.json",
        "to": ""
      },
      "binaries": [],
      "category": "public.app-category.finance"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "extraResources":  {
        "from": "./LinuxInit.json",
        "to": "../"
      }
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
  },
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ],
      "desktop": {
        "Categories": "P2P;Finance;Security"
      },
      "extraResources":  {
        "from": "./LinuxInit.json",
        "to": "../"
      }
    }
  },
  "gitHooks": {
    "commit-msg": "fabric verify-commit"
  }
}
